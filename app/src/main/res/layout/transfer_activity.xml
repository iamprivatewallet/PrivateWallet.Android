<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transfer_receipt"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_title_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp">
        <RelativeLayout
            android:id="@+id/rl_title_wraper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bv_title_layout_height"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:src="@mipmap/page_title_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="转账"/>


            <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款地址"
            android:textColor="#000"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_coner8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/et_addr"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/bv_transparent"
                android:gravity="center_vertical"
                android:hint="ETH 地址"
                android:textColor="#000"
                android:textColorHint="#888"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tv_addr_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/src_lib_eui_icon_addressbook" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#000"
                android:textSize="13sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_coner8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/bv_transparent"
                android:gravity="center_vertical"
                android:hint="0"
                android:inputType="numberDecimal"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textColorHint="#888"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE" />

            <EditText
                android:id="@+id/et_node"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bv_transparent"
                android:gravity="center_vertical"
                android:hint="备注"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textColorHint="#888"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_gas"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_coner8"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="矿工费"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_gas_cny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="13sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wim_arrowrightgray" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_recharge"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_yellow_coner_8"
            android:drawableRight="@mipmap/src_lib_eui_icon_arrowright"
            android:gravity="center_vertical"

            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="矿工费加油站，快速充值ETH"
            android:textColor="#888"
            android:textSize="13sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_high_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:drawableRight="@mipmap/wim_arrowrightgray"
        android:drawablePadding="10dp"
        android:text="高级模式"
        android:textColor="#333"
        android:textSize="13sp" />
    />

    <Button
        android:id="@+id/btn_next"
        style="@style/common_Btn_Style"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="下一步" />


</LinearLayout>