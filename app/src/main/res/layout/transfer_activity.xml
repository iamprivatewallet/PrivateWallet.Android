                        <com.fanrong.frwallet.view.SingleEditText
                            android:id="@+id/set_gas"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            app:topLeftText="Gas Price"
                            app:hint="Gas Price"/>
                        <View
                            android:layout_width="20dp"
