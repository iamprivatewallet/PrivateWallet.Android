<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.createwallet.CreateWalletStep1Activity">


    <xc.common.viewlib.view.customview.TitleLayout
        android:id="@+id/ac_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="创建身份"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#666"
            android:textSize="13sp"
            android:text="你将会拥有身份下的多链钱包，比如 ETH，HECO，BSC"
            />

        <EditText
            android:id="@+id/et_name"
            android:hint="身份名"
            android:layout_marginTop="20dp"
            style="@style/common_input_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                style="@style/common_input_bg"
                android:hint="密码"
                />

            <CheckBox
                android:id="@+id/cb_show_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:layout_centerVertical="true"
                android:button="@drawable/check_box_eye"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_password_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="不少于 8 位字符，建议混合大小写字母"
            android:textColor="@color/main_blue"

            android:textSize="11sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_repassword"
            style="@style/common_input_bg"
            android:layout_marginTop="10dp"
            android:hint="重复输入密码"
            />
        <EditText
            android:id="@+id/et_password_hide"
            style="@style/common_input_bg"
            android:layout_marginTop="10dp"
            android:hint="密码提示（可选）"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>



        <Button
            android:id="@+id/btn_create"
            android:text="创建"
            style="@style/common_Btn_Style"/>

    </LinearLayout>
</LinearLayout>