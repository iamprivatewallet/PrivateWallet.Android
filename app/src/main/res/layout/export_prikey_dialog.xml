<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gray_top_coner8"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_copy_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="复制"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_white_coner8"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/src_lib_eui_icon_bitwarning" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="风险提示"
            android:textColor="#ce5436"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/tv_hint_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/bv_text_black"
            android:text="退出身份后将删除所有钱包数据，请务必确保所有钱包已备份。"
            android:textSize="13sp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_copy"
        style="@style/common_Btn_Style"
        android:layout_weight="1"
        android:background="@drawable/bg_poolblue_coner8"
        android:textColor="@color/main_blue"
        android:text="仍要复制" />
    <View
        android:layout_width="15dp"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_nocopy"
        style="@style/common_Btn_Style"
        android:layout_weight="1"
        android:background="@drawable/bg_blue_coner8"
        android:text="不复制了" />
</LinearLayout>



</LinearLayout>