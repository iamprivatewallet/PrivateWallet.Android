<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.msgcenter.MsgDetailActivity">
    <xc.common.viewlib.view.customview.TitleLayout
        android:id="@+id/md_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="消息标题aaaa消息标题aaaa消息标题aaaa消息标题aaaa消息标题aaaa"
        android:textColor="@color/black"
        android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:text="08-24 16:43"
                android:textColor="@color/main_text_gray"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="admin"
                android:textColor="@color/main_text_gray"
                android:textSize="11sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_msg_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg正文dasdafwevwvgweg"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>