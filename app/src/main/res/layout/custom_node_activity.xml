<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <xc.common.viewlib.view.customview.TitleLayout
        android:id="@+id/ac_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/ll_backups_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_orange_solid"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_backups_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/tjwl_tip"
                    android:textSize="12sp"
                    android:textColor="#D87948"
                    android:lineHeight="15dp"
                    android:drawableLeft="@mipmap/icon_backuphint"
                    android:drawablePadding="10dp" />

                <!--        <ImageView-->
                <!--            android:id="@+id/tv_backups_cancel"-->
                <!--            android:layout_width="25dp"-->
                <!--            android:layout_height="25dp"-->
                <!--            android:src="@mipmap/icon_backup_close"-->
                <!--            android:layout_alignParentRight="true"/>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <com.fanrong.frwallet.view.SuperEditText
                    android:id="@+id/set_wlmc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topLeftTextContent="@string/wlmc"
                    app:bottomRightTextContent=""
                    app:topRightTextContent=""
                    app:edittext_hint="@string/wlmc_tip"
                    app:edittextisdisable="false"/>
                <com.fanrong.frwallet.view.SuperEditText
                    android:id="@+id/set_rpc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topLeftTextContent="@string/xzrpcurl"
                    app:bottomRightTextContent=""
                    app:topRightTextContent=""
                    app:edittext_hint="@string/xzrpcurl_tip"
                    app:edittextisdisable="false"/>
                <com.fanrong.frwallet.view.SuperEditText
                    android:id="@+id/set_chainid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topLeftTextContent="@string/chainid"
                    app:bottomRightTextContent=""
                    app:topRightTextContent=""
                    app:edittext_hint="@string/chainid_tip"
                    app:edittextisdisable="false"/>

                <com.fanrong.frwallet.view.SuperEditText
                    android:id="@+id/set_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topLeftTextContent="@string/dbfh"
                    app:bottomRightTextContent=""
                    app:topRightTextContent=""
                    app:edittext_hint="@string/xt"
                    app:edittextisdisable="false"/>
                <com.fanrong.frwallet.view.SuperEditText
                    android:id="@+id/set_qkllq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topLeftTextContent="@string/qkllq"
                    app:bottomRightTextContent=""
                    app:topRightTextContent=""
                    app:edittext_hint="@string/xt"
                    app:edittextisdisable="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_white_coner12"
                android:gravity="center"
                android:text="删除"
                android:textColor="#FF0000"
                android:textSize="15sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_firstsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_btn_greenborder"
                    android:gravity="center"
                    android:text="@string/qx"
                    android:layout_weight="1"
                    android:textColor="@color/dialog_content"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btn_save"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_btn_solid"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>