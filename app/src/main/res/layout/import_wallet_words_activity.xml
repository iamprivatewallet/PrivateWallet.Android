<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">


    <xc.common.viewlib.view.customview.TitleLayout
        android:id="@+id/ac_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_help"
            android:text="助记词"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/src_lib_eui_icon_helpgray"
            style="@style/importwallet_label" />

        <EditText
            android:id="@+id/et_words"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_coner8"
            android:gravity="top"
            android:paddingTop="10dp"
            android:hint="输入助记词单词，并使用空格分开"
            android:paddingLeft="15dp"
            android:textColorHint="#CCC"
            android:textSize="13sp" />


        <TextView
            android:text="密码"
            style="@style/importwallet_label"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_coner8"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:hint="钱包密码"
                android:paddingLeft="15dp"
                android:background="@color/bv_transparent"
                android:textColorHint="#CCC"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/et_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="重复输入密码"
                    android:background="@color/bv_transparent"
                    android:paddingLeft="15dp"
                    android:textColorHint="#CCC"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"

                    android:button="@drawable/check_box_eye"/>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_password_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:paddingLeft="15dp"
            android:text="不少于 8 位字符，建议混合大小写字母"
            android:textColor="@color/main_blue"

            android:textSize="11sp"
            android:visibility="gone" />


        <TextView
            android:text="密码提示"
            style="@style/importwallet_label"/>

        <EditText
            android:id="@+id/et_password_hide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_coner8"
            android:gravity="center_vertical"
            android:hint="选填"
            android:paddingLeft="15dp"
            android:textColorHint="#CCC"
            android:textSize="13sp" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_create"
            android:text="确定"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/common_Btn_Style"/>

    </LinearLayout>


</LinearLayout>