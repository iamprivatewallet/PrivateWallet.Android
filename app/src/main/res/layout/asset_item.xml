<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_wallet_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:background="@drawable/bg_dappicon"
        android:padding="5dp"
        android:id="@+id/iv_coin_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/src_lib_eui_icon_defaultdappicon"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_coin_icon"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textColor="@color/dialog_content"
            android:textStyle="bold"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="11111"
            android:textColor="@color/text_hint"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_walletlist_copy"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_addtolist" />

</RelativeLayout>