<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_delect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/con_delectfromlist"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_wallet_item"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_dappicon"
            android:padding="5dp"
            android:src="@mipmap/src_lib_eui_icon_defaultdappicon"
            android:id="@+id/iv_chainicon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:textColor="@color/dialog_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tv_chainmame"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_chainicon"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qbsetting_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_totop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_totop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/src_lib_eui_icon_dragbars"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>